#include <SoftwareSerial.h> // library for serial communication
#include <TinyGPS++.h> // library for GPS parsing

// define the pins used for the serial connection
#define RX_PIN 8
#define TX_PIN 9

// create a software serial object for communication with the GPS module
SoftwareSerial gpsSerial(RX_PIN, TX_PIN);

// create a TinyGPS++ object for parsing GPS data
TinyGPSPlus gps;

void setup() {
  // initialize the serial connection with the GPS module
  gpsSerial.begin(9600);
}

void loop() {
  // read data from the serial connection
  while (gpsSerial.available()) {
    // feed the data to the GPS parser
    gps.encode(gpsSerial.read());
  }

  // check if new GPS data is available
  if (gps.location.isUpdated()) {
    // print the latitude and longitude to the serial monitor
    Serial.print("Latitude: ");
    Serial.println(gps.location.lat(), 6);
    Serial.print("Longitude: ");
    Serial.println(gps.location.lng(), 6);
  }
}
